<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="CircleTextImageView">
        <attr name="citv_border_width" format="dimension" />
        <attr name="citv_border_color" format="color" />
        <attr name="citv_border_overlay" format="boolean" />
        <attr name="citv_fill_color" format="color" />
        <attr name="citv_text_text" format="string" />
        <attr name="citv_text_color" format="color" />
        <attr name="citv_text_size" format="dimension" />
        <attr name="citv_text_padding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MyToolbar">
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="titleText" format="string" />
    </declare-styleable>
    <declare-styleable name="BadgeButton">
        <attr name="badgeText" format="string" />
        <attr name="badgeColor" format="color" />
        <attr name="badgeHeight" format="dimension" />
        <attr name="badgeVisible" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LoadingView">
        <attr name="loading_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showCircle" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>
    <attr format="reference" name="cropImageStyle"/>
</resources>